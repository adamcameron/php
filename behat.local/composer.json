{
    "name": "dac/behattest",
	"require": {
		"silex/silex": "~1.3",
		"symfony/config": "~2.3",
		"symfony/yaml": "~2.1",
		"twig/twig": "~1.0"
	},
    "require-dev": {
        "phpunit/phpunit": "~4",
        "behat/behat": "~3.0",
        "behat/mink": "~1.7",
        "behat/mink-extension": "~2.1",
        "behat/mink-goutte-driver": "~1.2",
        "behat/mink-selenium2-driver": "~1.3",
        "jakoch/phantomjs-installer": "~2.0"
    },
    "config": {
        "bin-dir": "bin/"
    },
    "autoload": {
        "psr-4": {
            "me\\adamcameron\\behattest\\": "src/",
            "test\\": "test/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "PhantomInstaller\\Installer::installPhantomJS"
        ],
        "post-update-cmd": [
            "PhantomInstaller\\Installer::installPhantomJS"
        ]
    }

}
